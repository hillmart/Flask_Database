<!DOCTYPE html>
<html>
<head>
	<title>Edit Ingredient</title>
</head>
<a href="{{ url_for('ingredients') }}">Back to Ingredients</a>
<body>
	<div id="edit">
		<form id="editIngredient" action="{{ url_for('edit_ingredient', id=data.ingredientID) }}" method="post">
			<legend><strong>Edit Ingredient</strong></legend>
			<fieldset>
				<input type="hidden" value="{{ data.ingredientID }}" class="form-control" id="ingredientID" name="ingredientID" required>
				<label for="price">Price:</label>
				<input type="text" class="form-control" id="price" name="price" placeholder="{{ data.price }}" required>
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="{{ data.name }}" required>
                <input type="submit" value="Update Ingredient" name="Edit_Ingredient" class="btn btn-primary" style="margin:.5rem;">
			</fieldset>

		</form>
	</div><!--edit-->
</body>
</html>
