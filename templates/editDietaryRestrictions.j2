<!DOCTYPE html>
<html>
<head>
	<title>Edit Dietary Restriction</title>
</head>
<a href="{{ url_for('dietaryRestrictions') }}">Back to Dietary Restrictions</a>
<body>
	<div id="edit">
		<form id="editDietaryRestriction" action="{{ url_for('edit_dietary_restriction', id=data.restrictionID) }}" method="post">
			<legend><strong>Edit Dietary Restriction</strong></legend>
			<fieldset>
				<input type="hidden" value="{{ data.restrictionID }}" class="form-control" id="restrictionID" name="restrictionID" required>
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="{{ data.name }}" required>
                <input type="submit" value="Update Dietary Restriction" name="Edit_Dietary_Restrictions" class="btn btn-primary" style="margin:.5rem;">
			</fieldset>

		</form>
	</div><!--edit-->
</body>
</html>
